# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=city_policy_rag
POSTGRES_PORT=5432

# Database Connection URL (PostgreSQL with pgvector)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}"

# OpenAI API
OPENAI_API_KEY="sk-proj-..."  # Get from https://platform.openai.com/api-keys

# Server Configuration
PORT=8080
NODE_ENV=development

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Frontend CORS
FRONTEND_URL=http://localhost:3000

# RAG Configuration (optional)
CHUNK_SIZE=2400                # ~600 tokens
CHUNK_OVERLAP=480              # 20% of chunk size
TOP_K_CHUNKS=5                 # Number of chunks to retrieve
SIMILARITY_THRESHOLD=0.7       # Minimum cosine similarity (0-1)

# OpenAI Models
EMBEDDING_MODEL=text-embedding-3-small  # 1536 dimensions
LLM_MODEL=gpt-3.5-turbo                 # Fast and cheap for MVP
